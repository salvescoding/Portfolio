<div class="blog-post">
  <h2 class="blog-post-title"><%= link_to blog.title, blog %></h2>
  <p class="blog-post-meta">Published: <%= distance_of_time_in_words(blog.created_at, Time.now) %></p>
  <% if logged_in?(:site_admin) %>
    <p class="blog-post-meta">
      <%= icon_status_helper(blog) %>
      <%= icon_edit_helper(blog) %>
      <%= icon_trash_helper(blog) %>
    </p>
  <% end %>
  <p>
    <%= blog.body.first(300) %>...
  </p>
</div>


