
<div class="col-sm-8 blog-main">
  <h2><%= @blog.title %></h2>
  <%= link_to 'Edit', edit_blog_path(@blog) if logged_in?(:site_admin) %>
  <p>
    <%= @blog.body %>
  </p>

  <% unless current_user.is_a?(GuestUser) %>
    <%= form_for @comment, url: '#' do |f| %>
      <div class="from-group">
        <%= f.text_area :content, class: "form-control", placeholder: "Write your comments" %>
      </div>
        <%= f.submit 'Post comment', class: 'btn btn-outline-primary btn-sm' %>
    <% end %>
  <% end %>

  <%= render @blog.comments %>

</div>







