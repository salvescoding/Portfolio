

<div class="comment-card">
  <div class="card">
    <div class="card-block">
      <div class="row">
        <div class="col-md-1">
          <%= gravatar_helper comment.user %>
        </div>
        <div class="col-md-11">
          <div>
            <%= comment.content %>
          </div>
          <div class="comment-info">
            Comment posted by <%= comment.user.name %>,
            <%= distance_of_time_in_words(comment.created_at, Time.now) %>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>
