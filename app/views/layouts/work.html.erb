<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title> <%= @page_title %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="keywords" content= "<%= @seo_keywords %>"/>

    <%= favicon_link_tag 'favicons/favicon.ico' %>

    <link href="https://fonts.googleapis.com/css?family=Merriweather|Montserrat:300" rel="stylesheet">

    <%= stylesheet_link_tag    'works', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <%= render 'shared/work_nav' %>

    <%= yield %>

    <%= render 'shared/work_footer' %>

    <%= alerts %>

    <%= source_helper %>
  </body>
</html>
