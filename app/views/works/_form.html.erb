<%= form_for(@work) do |f| %>
<div class="row">
  <div class="col-md-6">
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :subtitle %>
      <%= f.text_field :subtitle, class: 'form-control' %>
    </div>

    <div class="form-group">
      <label class="btn btn-primary">
        Upload thumb image<%= f.file_field :thumb_image, style: 'display:none;' %>

      </label>

    </div>

    <div class="form-group">
      <label class="btn btn-primary">
        Upload main image<%= f.file_field :main_image, style: 'display:none;' %>
      </label>
    </div>

  </div>
  <div class="col-md-6">
    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_area :body, class: 'form-control', rows: 15 %>
    </div>
  </div>
  <div class="col-md-12">
    <hr>
    <div>
      <h4>Technologies used:</h4>
        <%= f.fields_for :technologies do |tech| %>
          <%= render 'technology_fields', f: tech %>
        <% end %>
      <div>
        <%= link_to_add_association 'Add Technology', f, :technologies, class: 'btn btn-info' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.submit 'Save Portfolio Item', class: 'btn btn-primary btn-block' %>
    </div>
  <% end %>

  </div>
</div>

