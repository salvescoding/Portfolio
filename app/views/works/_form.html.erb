<%= form_for(@work) do |f| %>
<div class="row">
  <div class="col-md-6">
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :subtitle %>
      <%= f.text_field :subtitle, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.file_field :thumb_image%>
    </div>

    <div class="form-group">
      <%= f.file_field :main_image%>
    </div>

  </div>
  <div class="col-md-6">
    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_area :body, class: 'form-control', rows: 15 %>
    </div>
  </div>
  <div class="col-md-12">
    <hr>
    <div>
      <h4>Technologies used:</h4>
      <%= f.fields_for :technologies do |tech| %>
      <div class="form-group">
        <%= tech.label :name %>
        <%= tech.text_field :name, class: 'form-control' %>
      </div>
      <% end %>
    </div>
    <div class="form-group">
      <%= f.submit 'Save Portfolio Item', class: 'btn btn-primary btn-block' %>
    </div>
  <% end %>

  </div>
</div>

