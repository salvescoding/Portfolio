<div class="col-md-4">
  <div class="card mb-4 box-shadow" data-id="<%= work.id %>">
    <%= image_tag portfolio_image(work.thumb_image, 'thumb'), class: "card-img-top" %>
    <div class="card-body">
      <p class="card-title"><%= work.title %></p>
      <p class="card-text"><%= work.subtitle %></p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <%= link_to work.title, work_show_path(work), class: 'btn btn-sm btn-outline-secondary' %>
          <%= link_to 'Edit', edit_work_path(work), class: 'btn btn-sm btn-outline-secondary' if logged_in?(:site_admin) %>
          <%= link_to 'Delete', work, data: { confirm: 'Are you sure?' }, method: :delete, class: 'btn btn-sm btn-outline-secondary' if logged_in?(:site_admin) %>
        </div>
      </div>
    </div>
  </div>
</div>
